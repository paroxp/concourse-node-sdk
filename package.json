{
  "name": "concourse",
  "version": "0.0.2",
  "description": "Interact with Concourse API from a node application.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build:ts": "tsc",
    "build": "npm run -s build:ts",
    "clean": "rm -rf dist",
    "lint:ts": "eslint --format codeframe --ext .js,.ts .",
    "lint": "npm run -s lint:ts",
    "prebuild": "npm run -s clean",
    "prepublish": "npm run -s build",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test": "jest --coverage --runInBand"
  },
  "engines": {
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paroxp/concourse-node-sdk.git"
  },
  "keywords": [
    "concourse",
    "api",
    "sdk",
    "ci",
    "cd",
    "pipeline",
    "team",
    "users"
  ],
  "author": "Rafal Proszowski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/paroxp/concourse-node-sdk/issues"
  },
  "homepage": "https://github.com/paroxp/concourse-node-sdk#readme",
  "dependencies": {
    "axios": "^0.20.0",
    "simple-oauth2": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/simple-oauth2": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.10.0",
    "eslint-plugin-editorconfig": "^2.1.3",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.5.2",
    "nock": "^13.0.4",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 300000,
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.+(ts|js)"
    ]
  }
}
